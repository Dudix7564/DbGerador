<!DOCTYPE html>
<html lang="pt"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h2>Bem-vindo, <%= usuario.NomeUsuário %></h2>
    <p>Matrícula: <%= usuario.Matrícula %></p>
    <h3>Avaliações</h3>
    <% if (avaliacoes.length > 0) { %>
        <ul>
            <% avaliacoes.forEach(avaliacao => { %>
                <li>
                    <strong>Nota:</strong> <%= avaliacao.NotaAvaliação %> <br>
                    <strong>Mídia:</strong> <%= avaliacao.NoMídia ? avaliacao.NoMídia : "Sem mídia" %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>Sem avaliações até o momento.</p>
    <% } %>
    

    <!-- Botão para redirecionar para a página de avaliação -->
    <a href="/avaliacao/<%= usuario.Matrícula %>"><button>Nova Avaliação</button></a>

    <!-- Botão para voltar à página com todos os filmes -->
<a href="/gerador">
    <button>Ver Todos os Filmes</button>
</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmX5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>



